    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "name": "Todas las features",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber-js",
            "args": [
                "-f",
                "json:reports/cucumber_report.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "name": "prueba",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/cucumber/bin/cucumber-js",
            "args": [
                "${workspaceRoot}/features/tests/",
                "--tags",
                "@prueba"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "name": "Etiqueta Promiedos",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber-js",
            "args": [
                "-f",
                "json:reports/cucumber_report.json",
                "--tags",
                "@promiedos"
            ]
        }
    ]
}